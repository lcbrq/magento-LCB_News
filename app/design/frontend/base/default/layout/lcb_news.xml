<?xml version="1.0"?>
<layout version="1.0.0">
    <news_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="news/index" name="news_index" template="news/index.phtml"/>
        </reference>
    </news_index_index>
    <news_article_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="news/article" name="news_article" template="news/article.phtml"/>
        </reference>
    </news_article_index>
    <news_article_view>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="news/article" name="news_article" template="news/article.phtml">
                <block type="page/html_breadcrumbs" name="breadcrumbs" as="breadcrumbs"/>
            </block>
        </reference>
    </news_article_view>
</layout>